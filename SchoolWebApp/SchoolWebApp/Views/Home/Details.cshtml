@model SchoolWebApp.Models.News

@{
    ViewBag.Title = "التفاصيل";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<<!-- banner -->
<section class="banner-1"></section>
<!-- //banner -->
<!-- gallery -->
<div class="agileits-services text-center py-5">

    <p style="background-color:antiquewhite; font-weight:bolder;font-size:25px;text-align:center;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode'">

    <span class="glyphicon glyphicon-duplicate"></span>&nbsp; @Html.DisplayFor(model => model.NewsTitle)

    </p>


</div>
<div class="col-md-3"></div>
<div class="col-md-6">
    <img src="~/uploads/@Html.DisplayFor(model => model.NewsImage)" class="thumbnail img-responsive" style="width:500px; height:400px;" />
</div>
<div class="col-md-3">
</div>

<div class="col-md-12">

    <table style="text-align:right">
        <tr>

            <td style="border-top:0px; font-size:large;color:black">
                @Html.DisplayFor(model => model.NewsSummary)
                <br />
                <br />
            </td>
        </tr>

        <tr>
            <td style="border-top:0px; border-bottom: 1px solid #ddd;font-size:large;color:black">
                @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.NewsDetails).ToString()))
            </td>
        </tr>
    </table>
    <br />
    <br />
    <br />
    <br />
</div>



<div class="col-md-12">
    <p class="btn btn-success col-md-2 btn-lg" style="font-weight:900">
        @Html.ActionLink("العودة إلى القائمة", "News", null, new { @style = "color:black;font-weight:500" })


    </p>


</div>
<div class="col-md-12">
    <p></p>
</div>
