@model SchoolWebApp.Models.News


@{
    ViewBag.Title = "حذف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="thumbnail" style="padding-bottom:100px;padding-right:0px ;">
    <div style="background:url('../../Content/images/about_schools.jpg') center ;height:200px;">
    </div>

    <div class="col-md-12" style="background-color:lavender; margin-top:5px;padding-top:5px; height:50px;">

        <h2 style="text-align:center">
            <span class="glyphicon glyphicon-trash"></span>
            حذف الخبر   &nbsp;&nbsp;
        </h2>

    </div>
    <div class="col-md-12 thumbnail" style="background-color:indianred;margin-top:10px;text-align:right;height:40px;">
        <h4 style="color:black">
            <span class="glyphicon glyphicon-trash"></span>&nbsp;هل أنت متأكد من أنك تريد حذف هذا الخبر؟
        </h4>


    </div>

    <br />
    <div class="col-md-6">
        <img src="~/uploads/@Html.DisplayFor(model => model.NewsImage)" class="img-responsive thumbnail" style="width:400px; height:300px" />

        <br />
        <br />

    </div>
    <div class="table-responsive col-md-6">
        <table class="table  table-hover" style="margin-bottom:30px;text-align:right">


            <tr>
                <th style="border-top:0px; border-bottom: 1px solid #ddd;font-weight:900 ;width:100px">
                    @Html.DisplayNameFor(model => model.NewsTitle):

                </th>
                <td style="border-top:0px; border-bottom: 1px solid #ddd; ">
                    @Html.DisplayFor(model => model.NewsTitle)
                </td>
            </tr>

            <tr>
                <th style="border-top:0px; border-bottom: 1px solid #ddd; font-weight:900">
                    @Html.DisplayNameFor(model => model.NewsSummary):

                </th>
                <td style="border-top:0px; border-bottom: 1px solid #ddd; ">
                    @Html.DisplayFor(model => model.NewsSummary)
                </td>
            </tr>
            <tr>
                <th style="border-top:0px; border-bottom: 1px solid #ddd;font-weight:900 ">
                    @Html.DisplayName("نوع الخبر"):
                </th>
                <td style="border-top:0px; border-bottom: 1px solid #ddd;">

                    @Html.DisplayFor(model => model.NewsType.NewsTypeName)
                </td>
            </tr>

            <tr>
                <th style="border-top:0px; border-bottom: 1px solid #ddd;font-weight:900 ">
                    @Html.DisplayNameFor(model => model.NewsDate):

                </th>
                <td style="border-top:0px; border-bottom: 1px solid #ddd; ">
                    @Html.DisplayFor(model => model.NewsDate)
                </td>
            </tr>
        </table>
        <br />
        <br />


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            <div class="form-actions no-color">
                <p>

                    <input type="submit" value="حذف" class="col-md-3 btn-lg btn-danger glyphicon glyphicon-trash" role="button" style="margin-right:10px;color:black;font-weight:500" />



                </p>

                <p class="col-md-5 btn-lg btn-primary" role="button" style="margin-right:10px">

                    <span class="glyphicon glyphicon-share-alt"></span>
                    @Html.ActionLink("العودة إلى القائمة", "Index", null, new { @style = "color:black;font-weight:500" })

                </p>


            </div>
        }

    </div>
</div>




















