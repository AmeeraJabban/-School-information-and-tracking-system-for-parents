@using PagedList;
@using PagedList.Mvc;
@model IPagedList<SchoolWebApp.Models.Notes>
<div class="thumbnail" style="padding-bottom:100px;padding-right:0px ;">
    <div style="background:url('../../Content/images/about_schools.jpg') center ;height:200px;">
    </div>

    <div class="col-md-12" style="background-color:lavender; margin-top:5px;padding-top:5px; height:50px;">

        <h2 style="text-align:center">
            <span class="glyphicon  glyphicon-cog"></span>
            الملاحظات   &nbsp;&nbsp;
        </h2>

    </div>



    <div class="container">
        <div class="row" style="text-align:right">

            <div class="table-responsive col-md-12" style="padding:0px">
                <table class="table table-striped table-hover">
                    <tr style="background-color:lavenderblush">
                        <th style="font-weight:900;font-size:larger">

                            @Html.DisplayName("اسم المدرس")
                        </th>
                        <th style="font-weight:900;font-size:larger">
                            @Html.DisplayName("المادة")
                        </th>
                        <th style="font-weight:900;font-size:larger">
                            @Html.DisplayNameFor(model => model.First().Note)
                        </th>

                        
                        <th style="font-weight:900;font-size:larger">
                            @Html.DisplayNameFor(model => model.First().NoteDate)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td style="font-size:large">
                            @Html.DisplayFor(modelItem => item.Teacher.FullName)
                        </td>
                        <td style="font-size:large">
                            @Html.DisplayFor(modelItem => item.Teacher.Subject)
                        </td>
                        <td style="font-size:large">
                            @Html.DisplayFor(modelItem => item.Note).ToString().Substring(0, 5)...
                        </td>
                        <td style="font-size:large">
                            @Html.DisplayFor(modelItem => item.NoteDate).ToString().Substring(0, 10)
                        </td>

                        <td style="width:150px">
                            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open", title = "تفاصيل" })
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </div>
        @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))



        <p class="col-md-2 btn-lg btn-primary" role="button">

            <span class="glyphicon glyphicon-share-alt"></span>
            @Html.ActionLink("العودة إلى القائمة", "../Home/index", null, new { @style = "color:black;font-weight:500" })


        </p>


    </div>
</div>