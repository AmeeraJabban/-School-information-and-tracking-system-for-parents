@using PagedList;
@using PagedList.Mvc;
@using SchoolWebApp.Models
@model PagedList.IPagedList<AdminAddStudentsIndex>

@{
    ViewBag.Title = "GetStudents";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="thumbnail" style="padding-bottom:100px;padding-right:0px ;">
    <div style="background:url('../../Content/images/about_schools.jpg') center ;height:200px;">
    </div>

    <div class="col-md-12" style="background-color:lavender; margin-top:5px;padding-top:5px; height:50px;">

        <h2 style="text-align:center">
            <span class="glyphicon  glyphicon-list"></span>
            قائمة الطلاب   &nbsp;&nbsp;
        </h2>

    </div>



    <div class="container">
        <div class="row" style="text-align:right">


            <div class="table-responsive col-md-12" style="padding:0px">
                <table class="table table-striped table-hover">
                    <tr style="background-color:lavenderblush">
                        <th style="font-weight:900;font-size:larger">
                            @Html.DisplayName("")
                        </th>
                        <th style="font-weight:900;font-size:larger">

                            @Html.DisplayName("اسم الطالب")
                        </th>
                        <th style="font-weight:900;font-size:larger">

                            @Html.DisplayName("الجنس")
                        </th>
                        <th style="font-weight:900;font-size:larger">
                            @Html.DisplayName("اسم ولي الأمر")
                        </th>

                        
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-size:large">
                                <img src="~/uploads/@Html.DisplayFor(modelItem => item.Image)" class="thumbnail" style="width:50px; height:50px" />
                            </td>
                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.Sex)
                            </td>



                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.ParentName)
                            </td>

                            


                            <td style="width:200px">


                                @Html.ActionLink("Absent ", "Absent", new { id = item.Id }, new { @class = " glyphicon glyphicon-thumbs-down", title = "اكتب ملاحظة" })&nbsp; | &nbsp;
                                @Html.ActionLink("Attends ", "Attends", new { id = item.Id }, new { @class = "glyphicon glyphicon-thumbs-up", title = "ارسال sms" })

                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        @Html.PagedListPager(Model, Page => Url.Action("GetStudents", new { Page }))


        <p class="col-md-2 btn-lg btn-primary" role="button">

            <span class="glyphicon glyphicon-share-alt"></span>
            @Html.ActionLink("العودة إلى القائمة", "../home/index", null, new { @style = "color:black;font-weight:500" })


        </p>


    </div>
</div>
