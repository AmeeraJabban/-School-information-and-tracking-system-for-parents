@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebApplication1.Models.ApplicationUser>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="thumbnail" style="padding-bottom:100px;padding-right:0px ;">
    <div style="background:url('../../Content/images/about_schools.jpg') center ;height:200px;">
    </div>

    <div class="col-md-12" style="background-color:lavender; margin-top:5px;padding-top:5px; height:50px;">

        <h2 style="text-align:center">
            <span class="glyphicon  glyphicon-cog"></span>
            المدرسين   &nbsp;&nbsp;
        </h2>

    </div>



    <div class="container">
        <div class="row" style="text-align:right">

            <div class="col-md-3 thumbnail">
                <p class="btn btn-block btn-success glyphicon glyphicon-plus" style="height:30px;font-size:medium">
                    @Html.ActionLink("  إضافة  مدرس  ", "Create", null, new { @style = " color:black;font-weight:500;font-size:larger" })
                </p>


            </div>
            <div class="table-responsive col-md-12" style="padding:0px">
                <table class="table table-striped table-hover">
                    <tr style="background-color:lavenderblush">
                        <th style="font-weight:900;font-size:larger">
                            @Html.Label("الاسم")

                        </th>
                        <th style="font-weight:900;font-size:larger">
                            @Html.Label("الجنس")
                        </th>
                        <th style="font-weight:900;font-size:larger">
                            @Html.Label("العمر")
                        </th>
                        <th style="font-weight:900;font-size:larger">

                            @Html.Label("المادة")
                        </th>
                       
                        <th style="font-weight:900;font-size:larger">
                            @Html.Label("الرقم")
                        </th>
                        <th style="font-weight:900;font-size:larger">
                            @Html.Label("البريد")
                        </th>
                        <th style="font-weight:900;font-size:larger;width:220px"></th>

                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.FullName)

                            </td>
                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.Sex)

                            </td>
                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.Age)

                            </td>
                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>
                            
                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.PhoneNumber)

                            </td>
                            <td style="font-size:large">
                                @Html.DisplayFor(modelItem => item.Email).ToString().Substring(0,7)...

                            </td>
                            <td style="width:100px">


                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "تعديل" }) &nbsp; | &nbsp;
                                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open", title = "تفاصيل" }) &nbsp; | &nbsp;
                                @Html.ActionLink(" ", "sendmsg", new { id = item.Id }, new { @class = "glyphicon glyphicon-envelope", title = "ارسال رسالة" }) &nbsp; | &nbsp;
                                @Html.ActionLink(" ", "SendMessage", new { id = item.Id }, new { @class = "glyphicon glyphicon-comment", title = "ارسال sms" }) &nbsp; | &nbsp;
                                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "حذف" })&nbsp;

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
        @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }))



        <p class="col-md-2 btn-lg btn-primary" role="button">

            <span class="glyphicon glyphicon-share-alt"></span>
            @Html.ActionLink("العودة إلى القائمة", "../home/index", null, new { @style = "color:black;font-weight:500" })


        </p>


    </div>
</div>