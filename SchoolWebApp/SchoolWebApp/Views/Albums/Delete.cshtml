@model SchoolWebApp.Models.Albums



@{
    ViewBag.Title = "حذف";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

    <div class="thumbnail" style="padding-bottom:100px;padding-right:0px ;">
        <div style="background:url('../../Content/images/about_schools.jpg') center ;height:200px;">
        </div>

        <div class="col-md-12" style="background-color:lavender; margin-top:5px;padding-top:5px; height:50px;">

            <h2 style="text-align:center">
                <span class="glyphicon glyphicon-trash"></span>
                حذف الصنف   &nbsp;&nbsp;
            </h2>

        </div>
        <div class="col-md-12 thumbnail" style="background-color:indianred;margin-top:10px;text-align:right;height:40px;">
            <h4 style="color:black">
                <span class="glyphicon glyphicon-trash"></span>&nbsp;هل أنت متأكد من أنك تريد حذف هذا الالبوم؟
            </h4>


        </div>
        <div class="col-md-3"></div>
        <div class="col-md-7">

            <table class="table  table-hover" style="margin-bottom:30px;width:400px;">

                <tr>
                    <th style="border-top:0px; border-bottom: 1px solid #ddd;font-weight:900 ">
                        @Html.DisplayNameFor(model => model.AlbumTitle)
                    </th>
                    <td style="border-top:0px; border-bottom: 1px solid #ddd;">

                        @Html.DisplayFor(model => model.AlbumTitle)
                    </td>
                </tr>
                <tr>
                    <th style="border-top:0px; border-bottom: 1px solid #ddd;font-weight:900">

                        @Html.DisplayNameFor(model => model.AlbumDetails)
                    </th>
                    <td style="border-top:0px; border-bottom: 1px solid #ddd; ">

                        @Html.DisplayFor(model => model.AlbumDetails)
                    </td>
                </tr>
                <tr>
                    <th style="border-top:0px; border-bottom: 1px solid #ddd;font-weight:900">

                        @Html.DisplayNameFor(model => model.AlbumDate)
                    </th>
                    <td style="border-top:0px; border-bottom: 1px solid #ddd; ">

                        @Html.DisplayFor(model => model.AlbumDate)

                    </td>
                </tr>
            </table>
        </div>

        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-actions">
            <p class="col-md-4" style="margin-right:10px">

                <input type="submit" value="حذف" class="col-md-2 btn-lg btn-danger glyphicon glyphicon-trash" role="button" style="color:black;font-weight:500" />

            </p>

            <p class="col-md-2 btn-lg btn-primary" role="button" style="margin-right:10px">

                <span class="glyphicon glyphicon-share-alt"></span>
                @Html.ActionLink("العودة إلى القائمة", "Index", null, new { @style = "color:black;font-weight:500" })

            </p>


        </div>
    }
</div>
